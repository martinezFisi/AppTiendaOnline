<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.martinez.apptiendaonline.ClothesDetailsFragment">

    <ViewAnimator
        android:id="@+id/clothesDetailsViewAnimator"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageButton
            android:id="@+id/clothesDetailsSlide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/slide1"
            />

        <ImageButton
            android:id="@+id/clothesDetailsSlide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/slide2"
            />

        <ImageButton
            android:id="@+id/clothesDetailsSlide3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/slide3"
            />


    </ViewAnimator>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n de la prenda"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar al carrito"
            android:textAllCaps="false"
            android:gravity="center"
            android:singleLine="false" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talla: 8, 10, 12"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colores: Rojo, Negro, Azul"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio por unidad: S/.30"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: S/30"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tallas"
            android:textSize="16dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colores"
            android:textSize="16dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:textSize="16dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <Spinner
            android:id="@+id/tallasSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            >
        </Spinner>

        <Spinner
            android:id="@+id/coloresSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            >
        </Spinner>

        <Spinner
            android:id="@+id/cantidadesSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            >
        </Spinner>

    </LinearLayout>

    <Button
        android:id="@+id/comprarArticuloButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Comprar este articulo"
        android:textSize="20dp"
        android:textAllCaps="false"

        />

</LinearLayout>
